{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/paper/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/paper/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/paper",
  "projects": {
    "news": {
      "type": "application",
      "root": "apps/news",
      "entryFile": "main",
      "sourceRoot": "apps/news/src",
      "compilerOptions": {
        "tsConfigPath": "apps/news/tsconfig.app.json"
      }
    },
    "paper": {
      "type": "application",
      "root": "apps/paper",
      "entryFile": "main",
      "sourceRoot": "apps/paper/src",
      "compilerOptions": {
        "tsConfigPath": "apps/paper/tsconfig.app.json"
      }
    },
    "types": {
      "type": "library",
      "root": "libs/types",
      "entryFile": "index",
      "sourceRoot": "libs/types/src",
      "compilerOptions": {
        "tsConfigPath": "libs/types/tsconfig.lib.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}